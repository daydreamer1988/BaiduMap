<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.baidu.mapapi.map.TextureMapView
        android:layout_width="match_parent"
        android:id="@+id/mapView"
        android:layout_height="match_parent"></com.baidu.mapapi.map.TextureMapView>

    <Button
        android:text="画线"
        android:onClick="drawLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:id="@+id/button15" />

    <Button
        android:text="清除"
        android:onClick="clearLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button15"
        android:layout_toRightOf="@+id/button15"
        android:layout_toEndOf="@+id/button15"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:id="@+id/button16" />

</RelativeLayout>
